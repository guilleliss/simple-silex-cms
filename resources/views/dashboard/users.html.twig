{% extends 'dashboard/layout_dashboard.html.twig' %}
{% set active = 'homepage' %}

{% block content %}

    <h1>Users</h1>

	<table class="table table-striped table-hover">
    <thead>
		<th>#ID</th>
    	<th>Username</th>
    	<th>Email</th>
    	<th>Active</th>
    	<th>Options</th>
    </thead>
    {% for user in users %}
    <tr>
    	<td>{{ user.id }}</td>
    	<td>{{ user.username }}</td>
    	<td>{{ user.email }}</td>
    	<td>{{ user.active }}</td>
    	<td>
    		<a href="/user/{{user.id}}"><span class="glyphicon glyphicon-search" data-toggle="tooltip" data-placement="top" title="View user"></span></a>
    		<a href="/user/edit/{{user.id}}"><span class="glyphicon glyphicon-pencil" data-toggle="tooltip" data-placement="top" title="Edit user"></span></a>
    		<a href="/user/delete/{{user.id}}"><span class="glyphicon glyphicon-trash" data-toggle="tooltip" data-placement="top" title="Delete user"></span></a>    		
    	</td>
    </tr>
    {% endfor %}
	</table>

	<a class="btn btn-primary" href="/user/new"><span class="glyphicon glyphicon-user"></span> Add new user</a>

    {% block javascript %}
		<script type="text/javascript">
		    $(function () {
		        $('[data-toggle="tooltip"]').tooltip()
		    });
		</script>
    {% endblock %}

{% endblock %}