{% extends 'dashboard/layout_dashboard.html.twig' %}
{% set active = 'pages' %}

{% block content %}

    <h1>Pages</h1>

	<table class="table table-striped table-hover">
    <thead>
		<th>#ID</th>
    	<th>Title</th>
    	<th>Link</th>
    	<th>Date created</th>
    	<th>Options</th>
    </thead>
    {% for page in pages %}
    <tr>
    	<td>{{ page.id }}</td>
    	<td>{{ page.title }}</td>
    	<td>{{ page.link }}</td>
    	<td>{{ page.created|date("F jS Y \\a\\t g:ia") }}</td>
    	<td>
    		<a href="{{page.link}}"><span class="glyphicon glyphicon-search" data-toggle="tooltip" data-placement="top" title="View page"></span></a>
    		<a href="/page/edit/{{page.id}}"><span class="glyphicon glyphicon-pencil" data-toggle="tooltip" data-placement="top" title="Edit page"></span></a>
    		<a href="/page/delete/{{page.id}}"><span class="glyphicon glyphicon-trash" data-toggle="tooltip" data-placement="top" title="Delete page"></span></a>
    	</td>
    </tr>
    {% endfor %}
	</table>

	<a class="btn btn-primary" href="/blog/new"><span class="glyphicon glyphicon-pencil"></span> New post</a>

    {% block javascript %}
		<script type="text/javascript">
		    $(function () {
		        $('[data-toggle="tooltip"]').tooltip()
		    });
		</script>
    {% endblock %}
{% endblock %}